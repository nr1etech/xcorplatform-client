{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["ES2022", "dom"],
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": ["jest"]
  },
  "include": ["src"],
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
